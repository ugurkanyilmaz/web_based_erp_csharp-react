{
    # No automatic HTTPS (we're serving HTTP only in this deployment)
    auto_https off
    email admin@havalielaletleritamiri.com
}

# Combine localhost and configured domain into a single site matcher to
# avoid ambiguous site definition errors when {$DOMAIN} defaults to localhost.
10.10.10.3:8443, 31.223.18.233:8443, localhost, {$DOMAIN} {
    encode gzip zstd

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    handle /health {
        respond "OK" 200
    }

    handle /api/* {
        reverse_proxy ketenerp-api:8080 {
            # Caddy forwards forwarding headers by default; keep Host and real IP
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    handle /swagger* {
        reverse_proxy ketenerp-api:8080
    }

    handle {
        reverse_proxy ketenerp-frontend:80 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    log {
        output file /var/log/caddy/access.log {
            roll_size 10MB
            roll_keep 5
        }
    }
}
