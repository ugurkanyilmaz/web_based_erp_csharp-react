{
    # auto_https off SİLDİK. Çünkü HTTPS lazım.
    admin off
}

http://:8443 {
    # TLS kapalı (HTTP olarak dinle). Cloudflare tarafında 'No TLS Verify' gerekiyorsa
    # bu ayarı kullanabilirsiniz veya cloudflared config'de TLS doğrulamasını kapatın.
    # tls internal  <-- yorumlandı / kaldırıldı

    encode gzip zstd

    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # Health check
    handle /health {
        respond "OK" 200
    }

    # API İstekleri -> .NET Container
    handle /api/* {
        reverse_proxy ketenerp-api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Static uploads -> API container
    handle /uploads/* {
        reverse_proxy ketenerp-api:8080 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Swagger
    handle /swagger* {
        reverse_proxy ketenerp-api:8080
    }

    # Frontend -> Nginx Container
    handle {
        reverse_proxy ketenerp-frontend:80 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
        }
    }

    log {
        output file /var/log/caddy/access.log {
            roll_size 10MB
            roll_keep 5
        }
    }
}